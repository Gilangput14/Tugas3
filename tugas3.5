public class Tugas5 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.print("Masukkan umur anak (tahun): ");
        int umur = input.nextInt();

        System.out.print("Masukkan tinggi anak (cm): ");
        int tinggi = input.nextInt();

        int tarif = 0;

        if (umur < 1) {
            System.out.println("Dilarang masuk");
        } 
        else if (umur < 3) {
            tarif = 30000;
            if (tinggi > 70) {
                tarif += 10000;
            }
            System.out.println("Tarif: Rp " + tarif);
        } 
        else if (umur < 7) {
            tarif = 40000;
            if (tinggi > 120) {
                tarif += 15000;
            }
            System.out.println("Tarif: Rp " + tarif);
        } 
        else if (umur < 10) {
            tarif = 50000;
            if (tinggi > 150) {
                tarif += 20000;
            }
            System.out.println("Tarif: Rp " + tarif);
        } 
        else {
            tarif = 80000;
            System.out.println("Tarif: Rp " + tarif);
        }

        input.close();
    }
}
